{
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "baseUrl": ".",                 // ✅ 关键：允许从项目根开始的绝对导入
    "paths": {
      "components/*": ["components/*"],   // 可选：更显式
      "@/*": ["*"]                        // 可选：如果你喜欢用 "@/..."
    },

    "strict": false,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "ES2017",
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": ["node_modules"]
}
